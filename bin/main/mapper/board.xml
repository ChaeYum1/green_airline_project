<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.green.airline.repository.interfaces.BoardRepository">

	<select id="findByBoardList"
		resultType="com.green.airline.repository.model.Board">
		select * from recommend_board_tb;
	</select>

	<insert id="insertBoard">
		insert into recommend_board_tb
		(title, content, user_id, view_count)
		values
		(#{title}, #{content}, #{userId},  #{viewCount});
	</insert>
	
	<select id="findByBoardDetail" resultType="com.green.airline.repository.model.Board">
		select * from recommend_board_tb where user_id = #{user_id};
	</select>
</mapper>